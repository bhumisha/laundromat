<div class="dashHero"></div>
<div class="row">
    <div class="col-1 col-md-1"></div>
    <div class="col-10 col-md-4">
        <div class="accordion mt-5 bg-light" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header bg-light" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Place your Order
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                    data-bs-parent="#accordionExample">
                    <div class="accordion-body">

                        <form class="row createOrderForm">
                            <div class="row">
                                <div class="col-5">
                                    <p>Address : </p>
                                </div>
                                <div class="col-7">
                                    <p class="">{{orders.street_address}}
                                        <br>{{orders.city}} {{orders.state}}
                                        {{orders.zipcode}}</p>
                                </div>
                            </div>
                            <div class="col-12 py-3">
                                <label for="srvcDate">Date of service:</label>
                                <input type="date" min="{{todays_date}}" value="{{todays_date}}" class="form-select" name="srvcDate"
                                    id="srvcDate">
                            </div>
                            <div class="col-12">
                                <label for="bagCount">How many bags?</label>
                                <input type="number" class="form-select" min='1' max="10" value="1" name="bagCount" id="bagCount">
                            </div>
                            <div class="col-12 py-3">
                                <label for="serviceSelect">Service type:</label>
                                <select class="form-select" id="serviceSelect" required>
                                    <option selected disabled value="">Choose...</option>
                                    <option value="dryClean">Dry Clean</option>
                                    <option value="washNFold">Wash & Fold</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label for="comment">Comments</label>
                                <textarea type="text" class="form-control" name="comment" id="comment"></textarea>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-success my-3" type="submit">Confirm</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Change address
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
                    data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <form class="row g-3 needs-validation updateAddressForm" novalidate>
                            <div class="col-md-8">
                                <label for="streetAdd" class="form-label">Street Address</label>
                                <input type="text" class="form-control" id="streetAdd" name="streetAdd" required>
                                <div class="invalid-feedback">
                                    Please provide a valid street address.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="city" class="form-label">City</label>
                                <input type="text" class="form-control" id="city" name="city" required>
                                <div class="invalid-feedback">
                                    Please provide a valid city.
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label for="state" class="form-label">State</label>
                                <select class="form-select" id="state" name="state" required>
                                    <option selected disabled value="">Choose...</option>
                                    {{>states}}
                                </select>
                                <div class="invalid-feedback">
                                    Please select a valid state.
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label for="zip" class="form-label">Zip</label>
                                <input type="text" class="form-control" id="zip" name="zip" required>
                                <div class="invalid-feedback">
                                    Please provide a valid zip.
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Submit Address</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4 p-3 col-10 col-md-6">
        <div class="overflow-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Order Type</th>
                        <th scope="col">Order Status</th>
                        <th scope="col">Bags</th>
                    </tr>
                </thead>
                <tbody class="table-light">
                    {{#each orders.orders}}
                    <tr>
                        <td>{{format_date this.order_date}}</td>
                        <td>{{this.order_type}}</td>
                        <td>{{this.order_status}}</td>
                        <td>{{this.bags}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/create_order.js"></script>
