<div class="dashHero"></div>
<div class="container p-3">
    {{#each orders}}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{this.customer.name}} (ORDER_TYPE)</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{format_date this.order_date}}</h6>
            <p class="card-text">{{this.customer.apartment_no}} {{this.customer.street_address}}
                <br>{{this.customer.city}} {{this.customer.state}} {{this.customer.zip_code}}</p>
            <a href="mailto:{{this.customer.email}}" class="btn btn-outline-secondary card-link">Email</a>
            <a href="#" class="btn btn-success card-link">{{next_step this.order_status}}</a>
        </div>
    </div>
    {{/each}}
</div>