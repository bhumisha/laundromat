<div class="dashHero"></div>
<div class="container p-3">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        {{#each orders}}
        <div class="col mt-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{this.customer.name}} (ORDER_TYPE)</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{format_date this.order_date}}</h6>
                    <p class="card-text">{{this.customer.street_address}}
                        <br>{{this.customer.city}} {{this.customer.state}} {{this.customer.zipcode}}</p>
                    <a href="mailto:{{this.customer.email}}" class="btn btn-outline-secondary card-link">Email</a>
                    <a href="#" id="nextStep{{this.id}}" class="btn btn-success card-link">{{next_step this.order_status}}</a>
                </div>
            </div>
        </div>
        {{/each}}
</div>

<script src="/js/edit-order.js"></script>
